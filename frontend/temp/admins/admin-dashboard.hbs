{{>header}}

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <!-- Header -->
            <div class="navbar-header">
                <a class="navbar-brand" href="admin-dashboard">Library Management System (LMS)</a>
            </div>

            <!-- Display in navbar, User Name & Email Once Logged In -->
            <font style="color:white;">
                <span><strong>Welcome : {{name}}</strong></span>
            </font>

            <font style="color:white;">
                <span><strong>Welcome : {{email}}</strong></span>
            </font>

            <!-- Links -->
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown">My Profile</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="admin-view-profile">View Profile</a>
                        <a class="dropdown-item" href="admin-edit-profile">Edit Profile</a>
                        <a class="dropdown-item" href="admin-change-password">Change Password</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="adminLogout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    {{!-- Dasdboard Navbar --}}

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#e3f2fd">
        <div class="container-fluid">

            <!-- Links -->
            <ul class="nav navbar-nav navbar-center">

                {{!-- Dashboard --}}
                <li class="nav-item ">
                    <a class="nav-link" href="admin-dashboard">Dasdboard</a>
                </li>

                {{!-- BOOKS --}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown">Book</a>
                    <div class="dropdown-menu">
                        <a href="add-new-book" class="dropdown-item">Add New Book</a>
                        <a href="manage-book" class="dropdown-item">Manage Books</a>
                    </div>
                </li>

                {{!-- Category --}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown">Category</a>
                    <div class="dropdown-menu">
                        <a href="add-new-category" class="dropdown-item">Add New Category</a>
                        <a href="manage-category" class="dropdown-item">Manage Category</a>
                    </div>
                </li>

                {{!-- Author --}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown">Author</a>
                    <div class="dropdown-menu">
                        <a href="add-new-author" class="dropdown-item">Add New Author</a>
                        <a href="manage-author" class="dropdown-item">Manage Author's</a>
                    </div>
                </li>

                {{!-- Issue Book --}}
                <li class="nav-item ">
                    <a class="nav-link" href="issue-book">Issue Book</a>
                </li>

            </ul>
        </div>
    </nav>



    <!-- Running Line Text -->
    <span>
        <marquee>
            <h4>This is Library Management System. Library opens at 8:00 AM and closes at 8:00 PM</h4>
        </marquee>
    </span>


    <div class="row">
        {{!-- Cards --}}
        <div class="col-md-3">
            {{!-- Registered User --}}
            <div class="card bg-light" style="width:300px">
                <div class="card-header">Registered User</div>
                <div class="card-body">
                    <p class="card-text">Number of total users: {{this.user}}</p>
                    {{!--targte="_blank"-:Open link in new tab --}}
                    <a href="admin-view-registered-user" class="btn btn-danger" target="_blank">View Registered
                        User</a>
                </div>
            </div>

        </div>

        {{!-- Registered Books --}}
        <div class="col-md-3">
            <div class="card bg-light" style="width:300px">
                <div class="card-header">Registered Books</div>
                <div class="card-body">
                    <p class="card-text">Number of available Books: {{this.books}}</p>
                    {{!--targte="_blank"-:Open link in new tab --}}
                    <a href="admin-view-registered-books" class="btn btn-success" target="_blank">View Registered
                        Books</a>
                </div>
            </div>

        </div>

        {{!-- Registered Category --}}
        <div class="col-md-3">
            <div class="card bg-light" style="width:300px">
                <div class="card-header">Registered Category</div>
                <div class="card-body">
                    <p class="card-text">Number of Book's Category: {{this.category}}</p>
                    {{!--targte="_blank"-:Open link in new tab --}}
                    <a href="admin-view-registered-category" class="btn btn-primary" target="_blank">View Category</a>
                </div>
            </div>
        </div>

        {{!-- Registered Authors --}}
        <div class="col-md-3">
            <div class="card bg-light" style="width:300px">
                <div class="card-header">Registered Author's</div>
                <div class="card-body">
                    <p class="card-text">Number of available Author's: {{this.author}}</p>
                    {{!--targte="_blank"-:Open link in new tab --}}
                    <a href="admin-view-registered-author" class="btn btn-secondary" target="_blank">View Author's</a>
                </div>
            </div>
        </div>

        {{!-- Issued Book's --}}
        <div class="col-md-3">
            <div class="card bg-light" style="width:300px">
                <div class="card-header">Issued Book's</div>
                <div class="card-body">
                    <p class="card-text">Number of issued Book's: {{this.issueBook}}</p>
                    {{!--targte="_blank"-:Open link in new tab --}}
                    <a href="admin-view-issued-book" class="btn btn-secondary" target="_blank">View Issued Book's</a>
                </div>
            </div>
        </div>
    </div>

</body>


<script type="text/javascript">
    function preventBack() {
        window.history.forward();
    }
    setTimeout("preventBack()", 0);
    let myVar = window.location.href;
</script>

</html>